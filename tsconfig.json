{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "rootDirs": ["src", "scripts", "test"],
    "esModuleInterop": true
  },
  "exclude": ["dist", "node_modules"],
  "include": [
    "src",
    "scripts",
    "test/**/*.test.ts",
    "contracts/**/*.sol",
    "typechain-types"
  ],
  "files": ["hardhat.config.ts"]
}
